generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Subscription {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  user_id    String              @unique @db.ObjectId 
  plan       SubscriptionPlan
  status     SubscriptionStatus
  created_at DateTime            @default(now())
  expires_at DateTime

  sponsoredContents SponsoredContent[] @relation("UserSponsoredContent")

  @@map("subscription")
}

model SponsoredContent {
  id         String              @id @default(auto()) @map("_id") @db.ObjectId
  user_id    String              @db.ObjectId
  type       SponsoredContentType
  content    String
  start_date DateTime
  end_date   DateTime
  status     SponsoredContentStatus
  created_at DateTime            @default(now())
  updated_at DateTime            @updatedAt

  subscription Subscription?     @relation("UserSponsoredContent", fields: [user_id], references: [user_id])

  @@map("sponsored_content")
}

enum SponsoredContentType {
  badge
  post

  @@map("sponsored_content_type")
}

enum SponsoredContentStatus {
  active
  inactive

  @@map("sponsored_content_status")
}

enum SubscriptionPlan {
  basic
  premium
  enterprise

  @@map("subscription_plan")
}

enum SubscriptionStatus {
  active
  inactive
  expired

  @@map("subscription_status")
}
